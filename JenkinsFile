pipeline {

    agent any

    triggers {
        // pollSCM('H/5 * * * *')

        githubPush()


    }

    stages {
        stage('Checkout code') {

            steps {
                git branch: 'main', url: 'git@github.com:Pra-wnn/Flask_JenkinsCI-CD.git', credentialsId: 'your-credentials-id'
        }
        }

        stage('Setup Python') {
            steps {
                sh 'sudo apt-get update'
                sh 'sudo apt-get install python3.9 python3.9venv -y'
        
            }
        }

        stage('Create Virtual Environment Install dependencies') {
            steps {
                sh ''' 
                python3.9 -m venv venv
                source venv/bin/activate
                pip install -r requirements.txt
                '''
            }
        }

          stage('Run Tests') {
            steps {
                sh 'source venv/bin/activate && python3 -m unittest discover -s ./tests -p "test.py"'
            }
        }


    }


}