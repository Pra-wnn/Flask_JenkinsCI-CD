pipeline {
    agent any

    triggers {
        githubPush()
    }

    stages {
       
                stage('Git Checkout') {
                    steps {
                        
                        git branch: 'main' , changelog: false , url: 'https://github.com/Pra-wnn/Flask_JenkinsCI-CD'
                    }
                }

        stage('Setup Python') {
            steps {
                sh 'sudo apt-get update'
                sh 'sudo apt-get install python3.9 python3.9-venv -y'
            }
        }

        stage('Create Virtual Environment and Install dependencies') {
            steps {
                sh '''
                python3.9 -m venv venv
                source venv/bin/activate
                pip install -r requirements.txt
                '''
            }
        }

         stage('Run Tests') {
            steps {
                script {
                    try {
                        sh 'source venv/bin/activate && python3 -m unittest discover -s ./tests -p "test.py"'
                    } catch (Exception e) {
                        currentBuild.result = 'FAILURE'
                        error("Tests failed: ${e.message}")
                    }
                }
            }
        }

        post {
        failure {
            echo 'The pipeline failed. Tests did not pass.'
        }
        success {
            echo 'All tests passed. The code can be merged to the main branch.'
        }
    }
    }
}